<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/currentPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Current Password"
        android:inputType="textVisiblePassword"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter New Password"
        android:inputType="textVisiblePassword"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/currentPass"
        app:layout_constraintStart_toStartOf="@+id/currentPass"
        app:layout_constraintTop_toBottomOf="@+id/currentPass" />

    <EditText
        android:id="@+id/confirmNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Confirm New Password"
        android:inputType="textVisiblePassword"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/newPass"
        app:layout_constraintStart_toStartOf="@+id/newPass"
        app:layout_constraintTop_toBottomOf="@+id/newPass" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="update"
        app:layout_constraintEnd_toEndOf="@+id/confirmNewPass"
        app:layout_constraintStart_toStartOf="@+id/confirmNewPass"
        app:layout_constraintTop_toBottomOf="@+id/confirmNewPass" />
</androidx.constraintlayout.widget.ConstraintLayout>