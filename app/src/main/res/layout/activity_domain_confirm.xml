<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/application_welcome"
        android:layout_width="363dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:autoSizeMaxTextSize="40dp"
        app:autoSizeMinTextSize="25dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="232dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:text="Choose your internship duration :"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@+id/application_welcome"
        app:layout_constraintTop_toBottomOf="@+id/application_welcome" />

    <Spinner
        android:id="@+id/duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Payment ID:"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <EditText
        android:id="@+id/payment_id"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/application_welcome"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <TextView
        android:id="@+id/emp_login_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:autoLink="web"
        android:clickable="true"
        android:text="Click here"
        android:textColorLink="@color/purple_700"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/payment_description"
        app:layout_constraintStart_toStartOf="@+id/payment"
        app:layout_constraintTop_toBottomOf="@+id/payment_id" />

    <TextView
        android:id="@+id/payment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="to make payment of INR 500, for your internship"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@+id/payment_id"
        app:layout_constraintTop_toBottomOf="@+id/payment_id" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Submit"
        app:autoSizeMaxTextSize="15dp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_description" />

</androidx.constraintlayout.widget.ConstraintLayout>