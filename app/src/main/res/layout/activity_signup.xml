<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="370dp"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Start your Internship Journey Here"
                app:autoSizeMinTextSize="30dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/personName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:ems="10"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/usernameS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:ems="10"
                android:hint="Enter Username"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/personName"
                app:layout_constraintStart_toStartOf="@+id/personName"
                app:layout_constraintTop_toBottomOf="@+id/personName" />

            <EditText
                android:id="@+id/password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:ems="10"
                android:hint="Enter Password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/usernameS"
                app:layout_constraintStart_toStartOf="@+id/usernameS"
                app:layout_constraintTop_toBottomOf="@+id/usernameS" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/password1"
                app:layout_constraintStart_toStartOf="@+id/password1"
                app:layout_constraintTop_toBottomOf="@+id/password1" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:ems="10"
                android:hint="Enter your E-mail"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="@+id/password2"
                app:layout_constraintStart_toStartOf="@+id/password2"
                app:layout_constraintTop_toBottomOf="@+id/password2" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:ems="10"
                android:hint="Enter your Number"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="@+id/email"
                app:layout_constraintStart_toStartOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Enter your Branch"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@+id/phone"
                app:layout_constraintStart_toStartOf="@+id/phone"
                app:layout_constraintTop_toBottomOf="@+id/phone" />

            <EditText
                android:id="@+id/college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Enter your College"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@+id/branch"
                app:layout_constraintStart_toStartOf="@+id/branch"
                app:layout_constraintTop_toBottomOf="@+id/branch" />

            <EditText
                android:id="@+id/perc10th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="10th Percentage"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/college"
                app:layout_constraintStart_toStartOf="@+id/college"
                app:layout_constraintTop_toBottomOf="@+id/college" />

            <EditText
                android:id="@+id/perc12th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="12th Percentage"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/perc10th"
                app:layout_constraintStart_toStartOf="@+id/perc10th"
                app:layout_constraintTop_toBottomOf="@+id/perc10th" />

            <EditText
                android:id="@+id/percug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="UG Percentage"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/perc12th"
                app:layout_constraintStart_toStartOf="@+id/perc12th"
                app:layout_constraintTop_toBottomOf="@+id/perc12th" />

            <EditText
                android:id="@+id/percpg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="PG %, Blank for non-PG"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@+id/percug"
                app:layout_constraintStart_toStartOf="@+id/percug"
                app:layout_constraintTop_toBottomOf="@+id/percug" />

            <EditText
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Location"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@+id/percpg"
                app:layout_constraintStart_toStartOf="@+id/percpg"
                app:layout_constraintTop_toBottomOf="@+id/percpg" />

            <Button
                android:id="@+id/signup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Sign Up"
                app:layout_constraintEnd_toEndOf="@+id/location"
                app:layout_constraintStart_toStartOf="@+id/location"
                app:layout_constraintTop_toBottomOf="@+id/location" />





        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
